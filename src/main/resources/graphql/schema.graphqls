
type Query {
    findAllBooks: [Book]
}

type Mutation {
    createBook(bookInput: BookInput!): Book
}

type Book{
    id: ID!
    title: String
    pages: Int
    author: String
    reviews: [Review]
}

type Review {
    id: ID!
    title: String
    comment: String
    book: Book
}

input BookInput {
    title: String
    pages: Int
    author: String
}